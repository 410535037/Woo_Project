<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/record_weeks_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第一週(20/03/08 ~ 20/03/14)"
        android:textSize="20sp"
        android:textColor="@color/test"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1.3dp"
            android:layout_gravity="center|bottom"
            android:background="#D2D5D3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_day_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:text="12" />

            <TextView
                android:id="@+id/tv_day_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_day_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_day_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_day_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_day_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/tv_day_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="第一天種啥"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>

    <View
        android:layout_width="250dp"
        android:layout_height="1.3dp"
        android:layout_gravity="center|bottom"
        android:background="#D2D5D3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
</androidx.cardview.widget.CardView>