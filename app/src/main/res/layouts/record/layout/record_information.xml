<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/test">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/vege_small"/>

        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="1.3dp"
            android:layout_gravity="center"
            android:background="#D2D5D3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:id="@+id/record_LL1"
                    android:layout_toStartOf="@+id/record_RL1"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="農地編號 : "
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A80"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_LL2"
                    android:layout_below="@+id/record_LL1"
                    android:layout_toStartOf="@+id/record_RL2"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="作物名 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="小白菜"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_LL3"
                    android:layout_below="@+id/record_LL2"
                    android:layout_toStartOf="@+id/record_RL3"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="預期收穫 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="250 公斤"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_LL4"
                    android:layout_below="@+id/record_LL3"
                    android:layout_toStartOf="@+id/record_RL4"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="育苗日期 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19/11/11"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_LL5"
                    android:layout_below="@+id/record_LL4"
                    android:layout_toStartOf="@+id/record_RL5"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="預採收日 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20/03/04"
                        android:textSize="15sp"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="100dp"
                android:background="#D2D5D3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/record_RL1"
                    android:layout_toStartOf="@+id/record_LL1"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="盤數 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20盤"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_RL2"
                    android:layout_below="@+id/record_RL1"
                    android:layout_toStartOf="@+id/record_LL2"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="品種 : "
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="花蓮三號"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_RL3"
                    android:layout_below="@+id/record_RL2"
                    android:layout_toEndOf="@+id/record_LL3"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="實際收穫 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200 公斤"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_RL4"
                    android:layout_below="@+id/record_RL3"
                    android:layout_toEndOf="@+id/record_LL4"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="定植日期 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19/12/11"
                        android:textSize="15sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/record_RL5"
                    android:layout_below="@+id/record_RL4"
                    android:layout_toStartOf="@+id/record_LL4"
                    tools:ignore="NotSibling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="採收日期 : "
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20/03/11"
                        android:textSize="15sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
        <!--
        <View
            android:layout_width="250dp"
            android:layout_height="1.3dp"
            android:layout_gravity="center"
            android:background="#D2D5D3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        -->
        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@color/test"
            app:sc_border_width="1dp"
            app:sc_corner_radius="6dp">

            <RadioButton
                android:id="@+id/record_rb1"
                style="@style/RadioButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="以週次" />

            <RadioButton
                android:id="@+id/record_rb2"
                style="@style/RadioButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="以期間" />



        </info.hoang8f.android.segmented.SegmentedGroup>



    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/record_info_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>