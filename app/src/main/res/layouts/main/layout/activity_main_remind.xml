<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageButton
        android:id="@+id/plus_imb"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="64dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/segmented3"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/remind_setting" />

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmented3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sc_border_width="1dp"
        app:sc_corner_radius="6dp">

        <RadioButton
            android:id="@+id/button21"
            style="@style/RadioButton"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部" />

        <RadioButton
            android:id="@+id/button22"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日" />


    </info.hoang8f.android.segmented.SegmentedGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImageSlider"
        android:layout_width="306dp"
        android:layout_height="133dp"
        android:layout_marginTop="20dp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" >

    </androidx.viewpager2.widget.ViewPager2>

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmented4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:background="@color/test"
        app:layout_constraintEnd_toEndOf="@+id/viewPagerImageSlider"
        app:layout_constraintStart_toStartOf="@+id/viewPagerImageSlider"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider"
        app:sc_border_width="1dp"
        app:sc_corner_radius="6dp">

        <RadioButton
            android:id="@+id/rb1"
            style="@style/RadioButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="育苗" />

        <RadioButton
            android:id="@+id/rb2"
            style="@style/RadioButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="定植" />

        <RadioButton
            android:id="@+id/rb3"
            style="@style/RadioButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="收成" />

        <RadioButton
            android:id="@+id/rb4"
            style="@style/RadioButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="其他" />

    </info.hoang8f.android.segmented.SegmentedGroup>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="406dp"
        android:layout_height="405dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/segmented4"
        app:layout_constraintStart_toStartOf="@+id/segmented4"
        app:layout_constraintTop_toBottomOf="@+id/view2" >



    </androidx.viewpager.widget.ViewPager>


</androidx.constraintlayout.widget.ConstraintLayout>