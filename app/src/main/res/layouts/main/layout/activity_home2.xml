<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.home2"
    android:orientation="vertical"
    android:background="#E6EAE7">


        <RelativeLayout
            android:id="@+id/level_RL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/home_house"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="35dp"
                    />



            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/add_canopy_area"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:background="@drawable/home_add"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"

                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/canopy_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/home2_canopyarea_dropdown_shape"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <FrameLayout
                android:id="@+id/canopy_fg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/home2_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            </FrameLayout>

            <!--
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/open_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_menu_black_24dp"
                app:fab_colorNormal="#FC9D33"
                app:fab_colorPressed="#F7C389"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:onClick="showDialog"

                tools:ignore="RtlHardcoded" />

            -->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight ="1"
            android:orientation="horizontal"
            android:background="#e3e8e4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_home_style" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_edit_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_record"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_record_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_chart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_chart_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_transportation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_transportation_style"/>




        </LinearLayout>



</LinearLayout>