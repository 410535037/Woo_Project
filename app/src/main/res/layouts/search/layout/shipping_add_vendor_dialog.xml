<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/shipping_check_rec"
            android:text="新增廠商"
            android:textSize="18dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/shipping_enter_vendor_name"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/shipping_status"
            android:text="     輸入廠商名稱"
            android:textSize="18dp"
            android:textColor="#D8D8D8"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shipping_add_vendor_name_bt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shipping_circle1"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:text="新增"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>