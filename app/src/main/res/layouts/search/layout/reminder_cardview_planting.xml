<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:animateLayoutChanges="true">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_margin="4dp"
        android:padding="6dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutHolder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vege_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/carrot" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vegename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:text="胡蘿蔔"
                            android:textColor="#402C2B"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="2dp"
                                android:text="預計定植日 : "
                                android:textColor="#89B094"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tag1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="今日"
                                android:textColor="#89B094"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="# "
                                    android:textColor="#89B094"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tag2_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20"
                                    android:textColor="#89B094"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 盤"
                                    android:textColor="#89B094"
                                    android:textSize="12sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="# "
                                    android:textColor="#89B094"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/canopy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="A02"
                                    android:textColor="#89B094"
                                    android:textSize="12sp" />


                            </LinearLayout>


                        </LinearLayout>





                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/plus_imb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        android:background="#ffffff"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/cardview_plus" />

                    <ImageButton
                        android:id="@+id/more_imb"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="8dp"
                        android:layout_marginTop="20dp"
                        android:background="#ffffff"
                        android:scaleType="centerInside"
                        android:gravity="center_vertical"
                        app:srcCompat="@drawable/more" />
                    <!--
                    <CheckBox
                        android:id="@+id/check_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:button="@null"
                        android:background="@drawable/reminder_seedling_checkbox"
                        android:layout_gravity="center_vertical"/>-->

                    <ImageView
                        android:id="@+id/check_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleX="0.64"
                        android:scaleY="0.64"
                        android:src="@drawable/unchecked"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/innerRecyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_marginLeft="135dp"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>


