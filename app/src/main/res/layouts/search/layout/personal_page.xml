<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="371dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/personal_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/user_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="148dp"
                android:background="@drawable/user10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView4"/>

            <TextView
                android:id="@+id/personal_user_name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="狠愛種"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="80dp"
                android:background="@drawable/record_line1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/level"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toEndOf="@+id/model"
                app:layout_constraintTop_toBottomOf="@+id/user_img"
                app:layout_constraintVertical_bias="0.698"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/model"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="72dp"
                android:background="@drawable/personal_plant"
                app:layout_constraintBottom_toTopOf="@+id/textView17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.971"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="68dp"
                android:background="@drawable/personal_upgrade"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.964"/>


            <TextView
                android:id="@+id/textView12"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="等級：99"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="@+id/level"/>


            <TextView
                android:id="@+id/textView17"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:text="階段: 盆栽"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/model"
                app:layout_constraintHorizontal_bias="0.455"
                app:layout_constraintStart_toStartOf="@+id/model"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="370dp">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:id="@+id/personal_info_RL"
            android:layout_marginTop="400dp">
            <!--
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/personal_user_data_icon"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/personal_user_data"/>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/personal_user_info"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="85dp"
                            android:layout_marginTop="10dp"
                            android:background="#00000000"
                            android:gravity="fill_horizontal"
                            android:text="個人資料"
                            android:textSize="22dp"/>

                           -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="徐維彬"
                    android:textColor="@color/gray"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/personal_line"/>

                <TextView
                    android:id="@+id/textV2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="電子郵件"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="zx85hy6538@gmail.com"
                    android:textColor="@color/gray"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/personal_line"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="所在地"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/addr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:text="桃園市新屋區"
                    android:textColor="@color/gray"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/personal_line"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="性別"
                    android:textSize="17sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/gender_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:text="男"
                    android:textColor="@color/gray"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/personal_line"/>

            </LinearLayout>






        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ECECEC"
            android:layout_marginTop="30dp">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
           >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/personal_help_icon"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/personal_help"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/personal_help"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:background="#00000000"
                android:text="聯絡我們"
                android:textSize="22dp"
                android:gravity="fill_horizontal"/>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/personal_signout_icon"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/personal_signout"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/personal_signout"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:layout_marginStart="85dp"
                android:background="#00000000"
                android:text="登出"
                android:textSize="22dp"
                android:gravity="fill_horizontal"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bn_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                tools:ignore="OnClick"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:background="@drawable/personal_line">

            </ImageView>

        </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>



</ScrollView>