<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EAE7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#89b094">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="出貨"
            android:textColor="#FFF"
            android:textSize="22dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:id="@+id/left_arrow"
            android:background="@drawable/chart_left_arrow" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/shipping_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="出貨資料"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/vege_name"
            android:layout_marginStart="20dp"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:background="@drawable/shipping_vege_name"/>

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/vendor_name"
            android:layout_marginStart="15dp"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:background="@drawable/shipping_vendor_name"
            android:layout_toEndOf="@+id/vege_name"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_vendor"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/home_add"
            android:layout_toEndOf="@+id/vendor_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/sale_num"
            android:layout_marginStart="20dp"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:background="@drawable/shipping_num" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/shipping_date"
            android:layout_marginStart="20dp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/shipping_date" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/shipping_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="出貨狀態"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <include
            layout="@layout/shipping_radio_btn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <include
            layout="@layout/shipping_framlayoutall" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shipping_check"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:text="確定"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/shipping_check_rec"/>

    </RelativeLayout>

</LinearLayout>