<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#89b094">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="圖表分析"
                    android:textColor="#FFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/chart_calender" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/chart_left_arrow" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#89b094"
                android:alpha="0.5">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/date_back"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/select_date"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chart_bt_ripple" />


                <TextView
                android:id="@+id/select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="109年3-4月"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/date_after"
                    android:layout_toEndOf="@+id/select_date"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/chart_bt_ripple2" />

            </RelativeLayout>

            <!-- 切換圖表相關 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <include
                            layout="@layout/chart_radio_btn" />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <include
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/include_fram"
                        layout="@layout/chart_framelayoutall"/>

                </LinearLayout>

                </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight ="1"
            android:orientation="horizontal"
            android:background="#e3e8e4">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_home_style" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_edit_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_record"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_record_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_chart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_chart_style"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goto_transportation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_button_transportation_style"/>




        </LinearLayout>



</LinearLayout>